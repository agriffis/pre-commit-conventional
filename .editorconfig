# http://editorconfig.org/

root = true

[*]
charset = utf-8
indent_style = space
indent_size = 2
tab_width = 8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{diff,patch}]
trim_trailing_whitespace = false

[*.{js,json,jsx,mjs,ts,tsx}]
autoformat = prettier

[*.{md,py}]
indent_size = 4

[Makefile]
indent_size = 8
indent_style = tab
